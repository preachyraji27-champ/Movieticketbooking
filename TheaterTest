package team4;

import static org.junit.jupiter.api.Assertions.*;

import java.io.ByteArrayInputStream;
import java.nio.charset.StandardCharsets;
import java.util.Scanner;

import org.junit.jupiter.api.Test;

import booking.Theater;

public class TheaterTest {

    private Scanner makeScanner(String input) {
        return new Scanner(new ByteArrayInputStream(input.getBytes(StandardCharsets.UTF_8)));
    }

    @Test
    void testValidTheaterSelection() {
        Theater theater = new Theater();
        assertTrue(theater.selectTheater(makeScanner("1\n")));
        assertEquals("PVR Cinemas", theater.theaterName);

        theater = new Theater();
        assertTrue(theater.selectTheater(makeScanner("2\n")));
        assertEquals("INOX", theater.theaterName);

        theater = new Theater();
        assertTrue(theater.selectTheater(makeScanner("3\n")));
        assertEquals("Cinepolis", theater.theaterName);
    }

    @Test
    void testInvalidTheaterSelectionNonInt() {
        Theater theater = new Theater();
        assertFalse(theater.selectTheater(makeScanner("nope\n")));
    }

    @Test
    void testInvalidTheaterSelectionOutOfRange() {
        Theater theater = new Theater();
        assertFalse(theater.selectTheater(makeScanner("5\n")));
    }
}
