package booking;

import java.util.Scanner;

public class Theater {
    public String theaterName;

    public boolean selectTheater(Scanner sc) {
        System.out.println("\nSelect Theater:");
        System.out.println("1. PVR Cinemas");
        System.out.println("2. INOX");
        System.out.println("3. Cinepolis");
        System.out.print("Enter choice: ");

        if (!sc.hasNextInt()) {
            System.out.println("Invalid input. Please enter a number 1-3.");
            sc.nextLine();
            return false;
        }
        int choice = sc.nextInt();
        sc.nextLine();

        switch (choice) {
            case 1: theaterName = "PVR Cinemas"; break;
            case 2: theaterName = "INOX"; break;
            case 3: theaterName = "Cinepolis"; break;
            default:
                System.out.println(" Invalid theater selection (choose 1-3).");
                return false;
        }
        System.out.println("Selected Theater: " + theaterName);
        return true;
    }
}
